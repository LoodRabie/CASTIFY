<div class='background'>
  <div class='dancer-form-container'>
      <%= simple_form_for @dancer do |f| %>
        <div class='form-group'>
          <%= f.input :name %>
          <%= f.input :age %>
          <%= f.input :location %>
          <%= f.input :bio %>
          <%= f.input :dancing_styles %>
          <%= f.input :profile_picture, as: :file, label: 'Profile Picture' %>
          <%= f.hidden_field :user_id, value: current_user.id %>
          <%= f.button :submit, 'Update Dancer Profile',  class: 'btn btn-flat' %>
        </div>
      <% end %>
  </div>
</div>
