<div class='background'>
  <div class='casting-form-container'>
   <%= simple_form_for [@producer, @casting] do |f| %>
    <div class='form-group'>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :dancing_style %>
      <%= f.input :deadline %>
      <%= f.input :location %>
      <%= f.input :photo, as: :file %>
      <%= f.input :video, as: :file %>
      <%= f.button :submit, 'Create Casting', class: 'btn btn-flat' %>
    </div>
   <% end %>
  </div>
</div>
