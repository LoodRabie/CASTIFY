<h1>Edit Cassting</h1>
<div class='background'>
  <div class='dancer-form-container'>
  <%= simple_form_for [@producer, @casting] do |f| %>
  <div class='form-group'>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :dancing_style %>
    <%= f.input :deadline %>
    <%= f.input :location %>
    <%= f.input :photo, as: :file %>
    <%= f.button :submit, 'Update Casting', class: 'btn btn-primary' %>
     </div>
      <% end %>
  </div>
</div>
