<h1>Auditions for <%= @dancer.name %></h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Status</th>
      <th>Date</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @auditions.each do |audition| %>
      <tr>
        <td><%= audition.casting.title %></td>
        <td><%= audition.status %></td>
        <td><%= audition.date %></td>
        <td><%= link_to 'Show', [@dancer, audition] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
