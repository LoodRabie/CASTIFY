<h1>Auditions for <%= @dancer.name if @dancer %></h1>

<% if @auditions.present? && @auditions.any? %>
  <table>
    <thead>
      <tr>
        <th>Audition Date</th>
        <th>Status</th>
        <!-- Add more headers as needed -->
      </tr>
    </thead>
    <tbody>
      <% @auditions.each do |audition| %>
        <tr>
          <td><%= audition.created_at.strftime("%B %d, %Y") %></td>
          <td><%= link_to audition.status, audition_path(audition) %></td>
          <!-- Add more columns as needed -->
        </tr>
      <% end %>
    </tbody>
  </table>
<% elsif @auditions.present? && !@auditions.any? %>
  <p>No auditions found for this casting.</p>
<% else %>
  <p>No auditions found.</p>
<% end %>
