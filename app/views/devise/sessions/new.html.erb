<div class='background'>
<h2 class= 'log-in'>Log in</h2>
  <div class='sessions-form-container'>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class='sign-up-form-group'>
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      <%= f.button :submit, "Log in", class: 'btn btn-flat'%>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'btn btn-prim' %>
    </div>
      <% end %>
    </div>
      <div class='links-container'>
        <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-flat' %>
      </div>
</div>
